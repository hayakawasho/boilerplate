{
  "name": "webpack-boilerplate",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "lint:js": "eslint src/scripts/**/*",
    "lint:css": "stylelint \"src/styles/**/*\"",
    "lint": "npm-run-all -p lint:*",
    "clean": "rimraf ./public",
    "build:copy": "cpx \"./src/static/**/*\" ./public",
    "build:js": "webpack --config=webpack.config.dev.js",
    "build": "npm run clean && npm-run-all -p build:*",
    "production": "NODE_ENV=production npm run build",
    "serve": "node server.js",
    "watch:pug": "pug src/templates --basedir src/templates -o public --pretty -w",
    "watch:js": "webpack --config=webpack.config.dev.js -w --progress --colors --display-error-details",
    "watch": "npm-run-all -p watch:* & npm run serve",
    "start": "npm run clean && npm run build:copy & npm run watch:js & npm run watch:pug & npm run serve",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "hayakawasho",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/hayakawasho/webpack-boilerplate"
  },
  "dependencies": {
    "gsap": "^1.20.2",
    "normalize.css": "^7.0.0",
    "ua-parser-js": "^0.7.14"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "browser-sync": "^2.18.8",
    "cpx": "^1.5.0",
    "css-hot-loader": "^1.3.1",
    "css-loader": "^0.28.0",
    "css-mqpacker": "^6.0.1",
    "eslint": "^4.7.2",
    "eslint-loader": "^1.9.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "glob": "^7.1.2",
    "lodash": "^4.17.4",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1",
    "postcss-calc": "^6.0.0",
    "postcss-color-function": "^4.0.0",
    "postcss-flexbugs-fixes": "^3.2.0",
    "postcss-loader": "^2.0.6",
    "postcss-selector-matches": "^3.0.1",
    "postcss-selector-not": "^3.0.1",
    "postcss-will-change": "^2.0.0",
    "pug": "^2.0.0-rc.4",
    "pug-cli": "git+https://github.com/pugjs/pug-cli.git",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "stylelint": "^8.1.1",
    "stylelint-config-standard": "^17.0.0",
    "url-loader": "^0.5.9",
    "webpack": "^3.6.0",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-hot-middleware": "^2.19.1",
    "webpack-merge": "^4.1.0"
  }
}
